<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Number"
                android:id="@+id/teamNumber"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/teamLocation"
                android:text="Location"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="textEnd"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamNickname"
            android:text="Team Name"
            android:layout_marginStart="5dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textStyle="italic"
            android:textColor="#03a9f4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="3dp"
            android:id="@+id/layout2"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats:"
                android:id="@+id/event"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textStyle="italic"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPRS"
                    android:id="@+id/oprs"
                    android:layout_marginEnd="20dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CCWMS"
                    android:id="@+id/ccwms"
                    android:layout_marginEnd="20dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DPRS"
                    android:id="@+id/dprs"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robot Information:"
                android:id="@+id/robotLabel"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textStyle="italic"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Drive Train:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/drivetrainLabel"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/drivetrain"
                    android:layout_marginStart="16dp"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Robot Type:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/typeLabel"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RobotType"
                    android:layout_marginStart="16dp"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Code Type:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/programingLabel"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/programing"
                    android:layout_marginStart="16dp"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Robot Speed:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/speedLabel"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/speed"
                    android:layout_marginStart="16dp"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Number of Motors:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/motorsLabel"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/motors"
                    android:layout_marginStart="16dp"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Has Vision:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/visionLabel"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vision"
                    android:layout_marginStart="16dp"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Comments:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentsLabel"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comments"
                    android:layout_marginStart="16dp"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap for More Information"
            android:textAlignment="textEnd"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/moreInfo"/>
    </LinearLayout>
</android.support.v7.widget.CardView>